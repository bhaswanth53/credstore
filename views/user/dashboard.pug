extends ../layouts/dashboard

block content
    div(class="uk-container dashboard")
        div(class="uk-padding uk-text-center")
            h1(class="title") Hello, #{user.name}
            p(class="title-label") Welcome back to the workspace, we missed you.
            div(class="uk-width-1-2@m uk-align-center")
                div(class="uk-grid-match" uk-grid)
                    div(class="uk-width-1-2@s uk-width-1-3@m")
                        div(class="dcard categories" onclick="location.href = '/user/categories';")
                            div(class="dcard-body uk-inline")
                                p(class="dcard-title uk-position-center") CT
                        p(class="dcard-label" onclick="location.href = '/user/categories';") Categories
                    div(class="uk-width-1-2@s uk-width-1-3@m")
                        div(class="dcard credentials" onclick="location.href = '/user/credentials';")
                            div(class="dcard-body uk-inline")
                                p(class="dcard-title uk-position-center") CD
                        p(class="dcard-label" onclick="location.href = '/user/credentials';") Credentials
                    div(class="uk-width-1-2@s uk-width-1-3@m")
                        div(class="dcard websites" onclick="location.href = '/user/websites';")
                            div(class="dcard-body uk-inline")
                                p(class="dcard-title uk-position-center") WB
                        p(class="dcard-label" onclick="location.href = '/user/websites';") Websites
                    div(class="uk-width-1-2@s uk-width-1-3@m")
                        div(class="dcard notes" onclick="location.href = '/user/notes';")
                            div(class="dcard-body uk-inline")
                                p(class="dcard-title uk-position-center") NT
                        p(class="dcard-label" onclick="location.href = '/user/notes';") Notes
